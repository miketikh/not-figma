{
  "rules": {
    "sessions": {
      "$canvasId": {
        "cursors": {
          ".read": "auth != null",
          "$userId": {
            ".write": "$userId === auth.uid"
          }
        },
        "presence": {
          ".read": "auth != null",
          "$userId": {
            ".write": "$userId === auth.uid"
          }
        },
        "activeTransforms": {
          ".read": "auth != null",
          "$objectId": {
            ".write": "auth != null"
          }
        },
        "groupTransforms": {
          ".read": "auth != null",
          "$userId": {
            ".write": "$userId === auth.uid"
          }
        }
      }
    }
  }
}
